# .env
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2025
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-2025
JWT_REFRESH_EXPIRATION=7d

# Microservices URLs
PATIENT_SERVICE_URL=http://localhost:3001
LAB_TESTS_SERVICE_URL=http://localhost:3002
AI_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004
DASHBOARD_SERVICE_URL=http://localhost:3005

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# GraphQL
GRAPHQL_PLAYGROUND=true
GRAPHQL_INTROSPECTION=true